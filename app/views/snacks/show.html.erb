<h2>Snack Details</h2>

<section id="attributes">
  <h4><%= @snack.name %></h4>
  <p>$<%= @snack.price.to_f %></p>
</section>

<section id="locations">
  <% @snack.machines.each do |machine| %>
    <h4>* <%= "#{machine.location}" %></h4>
    <p><%= "#{machine.snack_quantity} kind of snacks, with an average price of $#{machine.average_snack_price.round(2)}" %></p>
  <% end %>
</section>
